{
  "name": "toolbox-backend",
  "version": "1.0.0",
  "description": "A project using Node.js, Express.js, StandardJS, Testing, Factory Method Design Pattern, and Docker Compose.",
  "main": "app.js",
  "scripts": {
    "start": "nodemon app.js",
    "test": "mocha tests",
    "test:watch": "nodemon --exec 'npm test'",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "docker-compose": "^0.24.0",
    "dotenv": "^16.0.3",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "standard": "^17.0.0"
  },
  "eslintConfig": {
    "extends": "standard",
    "plugins": [
      "standard",
      "promise"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}
