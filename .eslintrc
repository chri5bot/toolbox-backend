{
  "extends": ["standard", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid",
        "printWidth": 80,
        "semi": false,
        "useTabs": false,
        "tabWidth": 2
      }
    ]
  }
}
